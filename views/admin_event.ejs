<!DOCTYPE html> 

<html>

    <head>
        <title>Mitgliederportal von Rotaract Dortmund</title>
        <link rel="stylesheet" href="./css/header.css">
       <link rel="stylesheet" href="./css/global.css">
        <meta charset="utf-8">
        
    </head>
    <body>
    
       <%- include("includes/header.ejs")  %> 

        <div id="subnav">

                <a href="admin_user" ><label>User</label></a>
                <a href="admin_event"><label>Veranstaltungen</label></a>
                <a href="admin_protocol"><label>Protokolle</label></a>
        </div>

        <form method="POST">

        
        <fieldset>
            <legend>
                Neue Veranstaltung
            </legend>


            <label for="name">Name der Veranstaltung</label>
            <input id="name" type="text" maxlength="60">
            <br>

            <label for="Datum">Datum</label>
            <input type="date" min="" max="">
            <br>

            <label for="Frist">Frist</label>
            <input type="date" id="Frist">
            <br>

            <label for="optionen">Optionen (mit Komma getrennt)</label>
            <textarea cols="30" rows="3" id="optionen"></textarea>
            <br>
            
            <label for="maxteilnehmer">Maximale Teilnehmerzahl</label>
            <input type="text" pattern="[0-9]*" min="1" max="50">
            <br>


            <br>
            <input type="reset">
            <input type="submit">

        </fieldset>

    </form>

        
    <%- include("includes/footer.ejs")  %> 

    </body>
</html>